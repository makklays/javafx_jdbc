<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.demo3.view.TaskController"
      spacing="10">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Task Details" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

    <Label text="Title:"/>
    <Label fx:id="titleLabel" style="-fx-font-size: 16px;"/>

    <Label text="Status:"/>
    <Label fx:id="statusLabel" style="-fx-font-size: 16px;"/>

    <Label text="Description:"/>
    <TextArea fx:id="descriptionArea" prefRowCount="5" editable="false"/>

    <Button fx:id="CloseDetailsButton" text="Close" onAction="#onCloseDetailsButtonClick" maxWidth="100"/>

</VBox>

